{
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [
        "--style",
        "{coalesce_brackets: true, dedent_closing_brackets: true, split_all_comma_separated_values: true, column_limit: 128, force_multiline_dict: true}"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "--exitfirst",
        "--verbose",
        "--disable-warnings",
        "--no-cov",
        "-s"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.pylintArgs": [
        "--disable=E1101,C0103,C0111,C0301,W0235,R0903,R0913"
    ],
    "python.linting.pycodestyleArgs": [
        "--ignore=W291,W293,E501"
    ],
    "python.linting.flake8Args": [
        "--max--line-length=128"
    ],
    "python.languageServer": "Pylance"
}